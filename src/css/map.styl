@require 'config'
// Important Layout Classes
body
  overflow hidden

.layout-content
  position absolute
  height auto
  width 100%
  bottom 0
  left 0
  top 0

#footerGfw
  display none !important

.map
  height 100%
  width 100%

.map-component
  position absolute
  z-index 5

.gfw-water-logo
  background url('images/GFW_Water_logo.png') no-repeat center
  background-size 90px
  position absolute
  height 90px
  width 90px
  z-index 5
  left 20px
  top 0
  &:after
    background url('images/beta.png')
    position absolute
    display block
    bottom -5px
    height 18px
    width 30px
    right -5px
    content ''

.aqueduct-logo
  background url('images/aqueduct-logo.png') no-repeat center
  background-size auto 69px
  position absolute
  height 50px
  width 268px
  left 125px
  z-index 5
  top 0px

.esriPopup .sizer
  width 250px !important

.esriPopup .pointer.top, .esriPopup .pointer, .esriPopup .outerPointer, .esriPopup .pointer.bottom, .esriPopup .pointer.left, .esriPopup .pointer.right, .esriPopup .contentPane
  background black !important
  .field-value
    color white
    font-size 14px
    font-weight bold
  .popup-link a
    color #97bd3d
    text-decoration none
    font-size 12px

.esriPopup .titlePane, .esriPopup .actionsPane
  display none

// Require any Map Content
@require 'modal'
@require 'alertsModal'
@require 'layerPanel'
@require 'controlPanel'
@require 'analysisPanel'
@require 'spinner'

// Media Queries for All Map Content
@media (min-width: 850px)
  .layout-content
    top 34px

@media (max-width: 850px)
  .layout-content
    bottom 51px
