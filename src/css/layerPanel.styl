// Loaded inline in html, image basepath is css/images/*.{jpg|png|svg}
.layer-panel
  max-height calc(100% - 170px)
  background white
  overflow-y auto
  width 280px
  left 20px
  top 110px
  /* IE10+ CSS styles go here */
  @media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
    max-height 65%

.layer-category
  margin 10px

.beyond-numbers-btn
  font-size 10px
  width 140px
  transition background 0.15s linear
  border-radius 35px
  text-align center
  line-height 25px
  padding 0 10px
  margin-left calc(50% - 70px)
  border 1px solid #4099ce
  background #fff
  color #555

.beyond-numbers-btn:hover
  background #ccc

.layer-category-label
  border-bottom 1px solid $gfwBlue
  text-transform uppercase
  font-weight 500
  font-size 15px
  color $gfwBlue
  padding 5px 0

.layer-category-content
  margin-left 10px

.layer-category-caret
  margin-right 2px
  line-height 25px
  font-size 9px
  float right

.active-layer-count
  margin-left 5px
  font-size 12px

.layer-group-label
  text-transform uppercase
  font-weight 500
  font-size 14px
  margin 10px 0

.layer-panel .layer-content-container
  margin 0 30px

//- Legends
.water-stress-legend
.major-dams-legend
.land-cover-legend
.sediment-legend
.wetlands-legend
.simple-legend
  justify-content center
  flex-wrap wrap
  display flex
  margin 5px 0
  & .legend-label
    font-size 12px
    padding 0 5px
  & .legend-row
    display flex
    width 100%

.water-stress-legend .no-data-labels div:nth-child(2)
.water-stress-legend .no-data-labels img:nth-child(4)
  order 1

.major-dams-legend
.land-cover-legend
  & .legend-row
    align-items center
    margin 1px 0
    display flex
    height 16px
    width 100%
  & .legend-label
    width 80%
  & .img
    width 20%

.wetlands-legend
  & .legend-label
    font-size 11px
  & .legend-row
    margin 1px 0
  & img
    height 20px
    width 20px

.case-studies-legend
  .case-studies-label
    font-size 11px
    margin-left 10px
    vertical-align middle

.canopy-label
.canopy-button
  font-size 10px

.tree-cover-canopy-display
  line-height 11px
  margin 5px 0

.canopy-button
  box-shadow 0 0 0 2px $gfwBlue
  display inline-block
  background $gfwBlue
  border-radius 10px
  padding 0px 4px
  margin 0 5px
  color white
  &:before
    content ' > '
  &:after
    content '% '

//- Timelines
.timeline-container
  margin 10px 0
  &.flex
    align-items center
  &.fires
    width 125px
  & select
    -webkit-appearance none
    position absolute
    height 100%
    width 100%
    opacity 0
    left 0
    top 0
    &:hover + div
      background darken(white, 10%)

.loss-timeline-spacer
  font-size 12px
  padding 0 8px

//- The classes below are the layer ids, if those layer ids are changed in the config, they will need
//- to be updated here as well so that the correct colors are applied to the layer checkbox
.layer-checkbox
  padding-bottom 3px
  margin-top 3px
  &.disabled
    & .layer-checkbox-label
      color $disabledFont
    & .info-icon
      background $disabledBackground
  &.active
    & > .toggle-switch
      background $gfwBlue
    & > .toggle-switch span
      left 9px
    &.loss .toggle-switch
      background $treeCoverLoss
    &.gain .toggle-switch
      background $treeCoverGain
    &.active-fires .toggle-switch
      background $activeFires
    &.burn-scars .toggle-switch
      background $burnScars
    &.tree-cover .toggle-switch
      background $treeCoverDensity
    &.sediment .toggle-switch
      background $sediment
    &.arid .toggle-switch
      background $arid
    &.water-stress .toggle-switch
      background $waterStress
    &.small-grants .toggle-switch
      background $smallGrants
    &.wetlands .toggle-switch
      background $wetlands
    &.historic-loss .toggle-switch
      background $historicLoss

.layer-checkbox-label
  padding-left 10px
  font-size 13px

.layer-checkbox-sublabel
  padding 0 25px 0 35px
  color $lightGray
  line-height 12px
  font-size 11px

.toggle-switch
  transition all 0.3s ease
  background $lightGray
  display inline-block
  border-radius 5px
  position relative
  height 10px
  width 17px

.toggle-switch span
  transition all 0.3s ease
  border-radius 50%
  position absolute
  background white
  height 6px
  width 6px
  left 2px
  top 2px

.layer-info
  background-color $gfwBlue
  display inline-block
  position absolute
  border-radius 50%
  height 14px
  width 14px
  right 10px
  top 4px

.layer-info svg
  position absolute
  margin auto
  fill white
  height 8px
  width 8px
  bottom 0
  right 0
  left 0
  top 0

.spinner-info
  -webkit-animation-name loader2
  -webkit-animation-duration 1s
  -webkit-animation-iteration-count infinite
  -webkit-animation-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
  -webkit-animation-direction normal
  -webkit-animation-fill-mode none
  -webkit-animation-delay 0s
  -webkit-animation-play-state running
  -moz-animation-name loader2
  -moz-animation-duration 1s
  -moz-animation-iteration-count infinite
  -moz-animation-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
  -moz-animation-direction normal
  -moz-animation-fill-mode none
  -moz-animation-delay 0s
  -moz-animation-play-state running
  -ms-animation-name loader2
  -ms-animation-duration 1s
  -ms-animation-iteration-count infinite
  -ms-animation-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
  -ms-animation-direction normal
  -ms-animation-fill-mode none
  -ms-animation-delay 0s
  -ms-animation-play-state running
  animation-name loader2
  animation-duration 1s
  animation-iteration-count infinite
  animation-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
  animation-direction normal
  animation-fill-mode none
  animation-delay 0s
  animation-play-state running
  z-index 11
  &.start
    visibility visible
    opacity 1

@media (max-width: 850px)
  .layer-panel
    bottom 100px
    z-index 500
    &.mobile-hide
      display none
