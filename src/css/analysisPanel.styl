// Loaded inline in html, image basepath is css/images/*.{jpg|png|svg}
.search-tools
  background white
  display flex
  height 40px
  width 320px
  right 40px
  z-index 6
  top 110px
  & .arcgisSearch
    margin auto auto 0
    border-radius 0
    & .searchBtn
    & .searchInput
      outline none
    & .searchGroup .searchInput
      font-size 12px
      width 200px
    & .searchBtn
      padding 6px
    & .searchToggle
    & .searchBtn
      border-radius 0

.analysis-tools
  max-height calc(100% - 215px)
  flex-direction column
  overflow hidden
  display flex
  width 320px
  right 40px
  top 150px
  & .no-shrink
    flex-shrink 0
  & .tab-container
    overflow-y auto
  & > div
    background white
    width 100%

.analysis-tools .tabs .gfw-btn
.analysis-footer > div
  font-size 14px
  width 50%

.analysis-footer
  & svg
    fill $darkGray
    margin 0 5px
    height 20px
    width 20px
  & > div
    border-top 1px solid $lightGrayBorder
    transition background 0.25s linear
    justify-content center
    text-align center
    line-height 20px
    padding 7px 10px
    color $darkGray
    &:first-child
      border-right 1px solid $lightGrayBorder
  & .analysis-action-label
    line-height 22px
    &:hover
      background darken(white, 10%)

.analysis-tools .tabs .gfw-btn
  //$lightGrayBorder is slightly ligher then $lightGray, making it better fit for unactive tab
  transition color 0.35s ease-in-out
  color $darkGray
  &.active
    color $gfwBlue

.tab-indicator
  transition all 0.35s ease-in-out
  background $gfwBlue
  height 5px
  width 50%

.analyze-header
  justify-content center
  align-items center
  color $gfwBlue
  display flex
  height 40px
  & svg
    margin-right 10px
    height 20px
    width 20px
    fill $gfwBlue

.analysis-tools__tutorial-link
  text-decoration none
  background $gfwBlue
  display inline-block
  border-radius 50%
  text-align center
  line-height 16px
  font-size 12px
  margin 0 5px
  color white
  height 14px
  width 14px
  &:hover
    background darken($lightGray, 10%)

.lat-lng-tool
  & .lat-lng-form
    justify-content center
    margin 10px 0
  & input
    border 1px solid $lightGrayBorder
    padding 5px 10px
    font-size 13px
    margin 0 5px
    outline none
    width 90px

.lat-lng-btn
  margin 0 5px

.add-point-btn
  margin 10px auto 10px
  width 120px
  &.active
    background darken($gfwBlue, 25%)

.custom-analysis
  margin-top -5px
  height 100%

.custom-analysis-spacer
  margin 5px 0

.lat-lng-instructions
  font-size 14px

.analysis-placeholder
  text-align center
  background white
  font-size 16px
  padding 30px
  margin 0

.loss-footnote
  justify-content center
  align-items center
  font-size 11px
  & .loss-footnote-label
    padding-right 3px

.loss-link
  & select
    -webkit-appearance none
    position absolute
    height 100%
    width 100%
    opacity 0
    left 0
    top 0
  & .loss-timeline-spacer
    padding 0 3px

.canopy-link
  & .canopy-text
    padding 0 3px
  & .canopy-density-label:before
    content ' > '
  & .canopy-density-label:after
    content '% '

.custom-analysis-link
  justify-content center
  margin 5px 0 10px
  font-size 12px
  & .custom-analysis-link-label
    padding-right 3px

.full-report-button
  margin 5px auto 10px
  width 180px

.watershed-summary
.custom-area-header
  justify-content center
  align-items center
  margin 5px 0
  & .watershed-summary-label
  & .custom-area-header__label
    padding-right 34px
    font-size 13px
    & .info-icon
      top 3px

.custom-area-header .custom-area-header__label
  margin-top 5px
  font-size 15px

.feature-title
.custom-area-title
  padding 0 10px
  margin 5px 0

.feature-title
  padding-top 3px

.watershed-chart
  margin 0 10px
  height 150px
  width 300px
  padding 0
  // Style the fourth line in the grid with a bright red line
  & .highcharts-grid path:nth-child(5)
    stroke #FF0800
    stroke-width 2

.custom-area-title
  & input
    -webkit-appearance none
    padding-left 30px
    font-size 16px
    outline none
    border none
  & .custom-area-title-edit
    position absolute
    height 18px
    left 15px
    top 1px
    & svg
      fill $gfwBlue
      height 18px
      width 18px

.custom-area-title.disabled
  & input
    padding-left 0
  & .custom-area-title-edit
    display none

