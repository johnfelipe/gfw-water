$helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
$georgia = "Georgia", serif
$fira-sans = 'Fira Sans', sans-serif
$fonts = 'helvetica' $helvetica,
         'georgia' $georgia

// colors
// NOTE: colors in $colors will generate text-* and back-* utility classes
$charcoal = #222
$pebble = #333
$smoke = #666
$white = #FFF
$gfw-blue = #E7002F
$gfw-blue = #4099ce
$dark-gray = #555
$concrete = #F2F2F2
$red-alert = #C12000
$map-background = #021331
$colors = 'charcoal' $charcoal,
          'smoke' $smoke,
          'pebble' $pebble,
          'gfw-red' $gfw-blue,
          'white' $white

body
  background-color white

#scherman-image
  background url('../css/images/scherman_foundation.png') no-repeat center
  // height 290px
  // width 290px
  padding 90px
  padding-left 130px
  padding-right 130px
  z-index 5
  margin-left calc(50% - 145px)

.partners-table
  // border-collapse separate
  // border-spacing 2em 3em
  border-collapse collapse

  & a
    text-decoration none

  th
    text-align left
  tr
    border-bottom 1px solid #d6d6d6
    height 40px
    background transparent
    &:last-child
      border-bottom none
  td
    vertical-align top
    padding-bottom 40px
    padding-right 35px
    &:last-child
      padding-right 0
    .table-image
      height 100px
      width 185px
      margin-top 20px

#ecoton
  background url('../css/images/logo-ecoton.png') no-repeat center
#mitrainsani
  background url('../css/images/yayasan-mitra-insani.png') no-repeat center
#hutanriau
  background url('../css/images/hutanriau.png') no-repeat center
#ecological
  background url('../css/images/ecological-society.png') no-repeat center
  background-size 170px
#cedarHimalaya
  background url('../css/images/cedar.jpg') no-repeat center
  background-size 150px

.content-body h3
  padding-top 1em

@media (max-width: 850px)
  .gfw-water-logo, .page-aqueduct-link
    top 0px

  .content-header
    margin 4em 0em
