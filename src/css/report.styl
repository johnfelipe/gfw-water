@require 'config'

$statBlue = #1F98D4
$white = #FFFFFF

$riskPink = #FF6097
$riskYellow = #D2DF2E
$riskBrown = #A79261
$riskOrange = #EA5A00

@require 'modal'

#watershed-info-button, #major-dams-info-button, #water-intakes-info-button
  position relative
  right auto
  left 10px
  top 2px

section.report-header
  min-height 100px
  z-index 1

.report-controls
  background $lightGrayHighlight
  margin-top 55px
  min-height 40px
  text-align right
  ul
    display flex
    justify-content flex-end
    align-items center
    li
      list-style-type none
      margin 0 0 0 20px
      cursor pointer
      height 40px
      width 40px
      &:first-child
        margin 0
      svg
        display flex
        height 100%
        fill $darkGray

.report-controls-bottom
  background $lightGrayHighlight
  text-align center
  width 100%

  border 1px solid #555
  ul
    display flex
    justify-content center
    align-items center
    li
      list-style-type none
      margin 0 0 0 20px
      cursor pointer
      width 150px
      height 34px
      svg
        display inline
        fill $statBlue
        // fill $white
        margin-left 10px
      // svg:hover
      //   fill $statBlue


.report-controls-background
  background $lightGrayHighlight
  margin-top -56px
  min-height 56px

