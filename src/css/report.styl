div.loading-container
  height 100%
  position relative
  div.loading
    height 50px
    left 50%
    margin-top -50px
    margin-left -25px
    position absolute
    top 50%
    width 50px
    path.moving
      animation spinning 2s ease-in-out infinite

@keyframes spinning {
  from { transform: rotate(0deg) }
  to   { transform: rotate(360deg) }
}

div#land-cover-chart
  div.loading-container
    div.loading
      margin-top 50px

div#land-cover-chart
  g.highcharts-legend
    g
      g
        g.highcharts-legend-item
          text
            fill #fff !important

div.wrapper
  margin 0 auto
  max-width 95%
  width 1024px

  div.printed-map
    height 300px

div.smaller
  font-size 80%
div.gray
  color $lightGray
span.blue-bubble
  border-radius 20px
  border 1px solid $statBlue
  padding 0 10px

hr
  border 0
  color $lightGray
  background-color $lightGray
  height 1px
  width 90%

ul
  list-style-type none
  text-transform none
  padding 0

div.square
  height 1em
  margin 0.25em auto 0 auto
  width 1em
div.square-pink
  background-color $riskPink
div.square-yellow
  background-color $riskYellow
div.square-brown
  background-color $riskBrown
div.square-orange
  background-color $riskOrange

section
  color $lightGray

section.dark
  background $darkGray

  h1
    color $white
    font-weight 100
    font-size 200%
    margin 0.25em 0 0 0

  p
    margin 0 0 1em 0

section.dark.map.overview
  margin-top -10px

div#risk-chart
  height 200px
  // Style the fourth line in the grid with a bright red line
  & .highcharts-grid path:nth-child(5)
    stroke #FF0800
    stroke-width 2

section.stats
section.risks
section.recent-loss
section.historical-loss
section.erosion
section.fire
section.water-stress
section.plan
section.other-projects
  text-transform uppercase
  h2
    color $statBlue
    font-weight 100
    margin 0
    padding-top 0.75em
  h4
    color $darkGray
    font-weight 400
    margin 0
  p
    text-transform none
  p.emphasis
    font-style italic
  table
    border-collapse collapse
  div.info-wrapper
    display flex
    padding 0 0 2em 0

    div.info-column
      color $lightGray
      flex-basis 50%
      &:first-child
        padding-right 2em

      h2
        padding 0
      p
        span.blue
          color $statBlue

      tr
        border 1px solid $lightGray
        border-left none
        border-bottom none
        border-right none
        &:first-child
          border-top none
        td
          padding 0.25em
          &:first-child
            border 1px solid $lightGray
            border-top none
            border-bottom none
            border-left none
          div.blue-stat
            color $statBlue
            text-transform none
            span.stat
              font-size 200%
              font-weight 500

section.recent-loss
section.historical-loss
section.erosion
section.fire
section.water-stress
section.plan
section.other-projects
  div.info-wrapper
    min-height 450px

section.plan
  div.info-wrapper
    min-height 50px

section.water-stress
  p.emphasis
    padding 0

section.plan
  table
    margin 1em 0 0 0
    width 100%
    tr
      border-bottom 1px solid $lightGray
      &:last-child
        border-bottom none
      th
        text-align left
      td
        text-transform none
        vertical-align top
        padding 4px
        &:nth-child(1)
          width 5%
        &:nth-child(2)
          width 20%
        &:nth-child(3)
          width 20%
        &:nth-child(4)
          width 55%
        span.risk-category
        span.strategy-example
          font-weight 700
        ul
          margin 0
    tr.risk-info
      display none
    tr.applicable
      display table-row

.gfw-btn.blue-switch
  color $statBlue
  background $white
  border 1px solid $statBlue
  :hover
    background #f2f2f2

.blue-switch:hover
  background #ccc

section.blue
section.blue a
section.blue h2
section.blue h4
  background $statBlue
  color $white

section.blue
  div.wrapper
    padding 0 0 1em 0
  h2
    padding-bottom 0.5em
  h4
    font-size 120%
    text-transform none
  ul li
    padding 0 0 0.5em 0
    word-wrap break-word

section.other-projects
section.other-projects h2
section.other-projects a
  color $white

section.other-projects
  div.wrapper
    padding 0 0 1em 0

section.other-projects h2
  padding-bottom 0.5em

.report-legend
  position absolute
  bottom 0
  display none
  border 1px solid rgb(170, 170, 170)
  background white
  justify-content center
  flex-wrap wrap
  display flex
  // margin 5px 0
  .legend-label
    font-size 12px
    padding 0 5px
  & .legend-row
    margin 5px 0
    display flex
    width 100%

.report-legend .no-data-labels div:nth-child(2)
.report-legend .no-data-labels img:nth-child(4)
  order 1

.gfw-water-logo
  background url('../css/images/GFW_Water_logo.png') no-repeat center
  background-size 90px
  position absolute
  height 90px
  width 90px
  z-index 5
  left 20px
  top 35px
  cursor pointer
  &:after
    background url('../css/images/beta.png')
    position absolute
    display block
    bottom -5px
    height 18px
    width 30px
    right -5px
    content ''

.page-aqueduct-link
  background url("../css/images/aqueduct-logo.png") no-repeat center
  background-size cover
  top 38px

.back-pebble
  background-color #333

@media (min-width: 850px)
  #headerGfw
    height 34px

@media (max-width: 850px)
  .report-controls-background
    margin-top 0

  .top-nav-container
    display none

@media (max-width: 1300px)
  section.dark.map.overview .wrapper
    max-width 75%

@media (max-width: 1000px)
  section.dark.map.overview .wrapper
    max-width 70%
