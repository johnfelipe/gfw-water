doctype html
html
  head
    title #{unsupported.title}
    include ../templates/meta.jade
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Fira+Sans:400,500,300')
    link(rel='icon', href='../css/images/favicon.ico')
    style.
      html, body {
        font-family: 'Fira Sans', Georgia, serif;
        background: #DDD;
        height: 100%;
        width: 100%;
        padding: 0;
        margin: 0;
      }
      .unsupported {
        position: absolute;
        height: 360px;
        width: 320px;
        margin: auto;
        bottom: 0;
        right: 0;
        left: 0;
        top: 0;
      }
      .logo-container {
        position: relative;
      }
      .logo {
        background: url('../css/images/GFW_Water_logo.png') no-repeat center;
        background-size: 90px;
        margin: 0 auto;
        height: 90px;
        width: 90px;
      }
      .logo:after {
        background: url('../css/images/beta.png');
        position: relative;
        display: block;
        height: 18px;
        width: 30px;
        content: '';
        left: 65px;
        top: 80px;
      }
      .unsupported__message {
        text-align: center;
        max-width: 320px;
        line-height: 21px;
        font-weight: 400;
        font-size: 21px;
      }
      .supported__browsers {
        list-style-type: none;
        padding: 0;
      }
      .supported__browsers li {
        text-align: center;
      }
      .supported__browsers a {
        text-decoration: none;
        font-size: 16px;
        color: #4099CE;
      }
  body
    div.unsupported
      h1.logo-container
        div.logo
      h3.unsupported__message #{unsupported.message}
      ul.supported__browsers
        each browser in unsupported.browsers
          li
            a(href='#{browser.href}')= browser.label
